<div class="collection-header-banner">
  <div class="left-content">
    <div class="top-content">
      <h1 class="title h1">{{ section.settings.title }}</h1>
      <p class="subtitle yantramanav-regular">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="button button--solid">{{ section.settings.button_text }}</a>
    </div>
    <div class="bottom-content">
      <h3 class="title h3">{{ section.settings.seo_title }}</h3>
      <p class="subtitle">{{ section.settings.seo_description }}</p>
    </div>
  </div>
  <div class="right-slider">
    {% for block in section.blocks %}
      <div
        class="slider-cell"
        {{ block.shopify_attributes }}
        style="background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.06) 0%, rgba(0, 0, 0, 0.06) 100%), url({{ block.settings.image | image_url }});"
      >
        <div class="slider-title-container">
          <a href="{{ block.settings.slide_link }}" class="slider-title heading h1">
            {{ block.settings.slide_title }}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{{ 'section-collection-header-banner.css' | asset_url | stylesheet_tag }}
<script>
document.addEventListener('DOMContentLoaded', function() {
  const sliderCells = document.querySelectorAll('.collection-header-banner .slider-cell');
  
  const observerOptions = {
    threshold: 0.3,
    rootMargin: '0px 0px -500px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.transform = 'translateY(0)';
        entry.target.style.opacity = '1';
      }
    });
  }, observerOptions);
  
  sliderCells.forEach(cell => {
    cell.style.transform = 'translateY(30px)';
    cell.style.opacity = '0';
    cell.style.transition = 'transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
    observer.observe(cell);
  });
  
});
</script>

