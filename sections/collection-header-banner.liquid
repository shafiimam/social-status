    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "seo_title",
      "label": "SEO Title",
      "default": "SEO COPY HEADING HERE"
    },
    {
      "type": "textarea",
      "id": "seo_description",
      "label": "SEO Description",
