{%- liquid
  assign sort_by = results.sort_by | default: results.default_sort_by
  assign total_active_values = 0
  if results.url
    assign results_url = results.url
  else 
    assign terms = results.terms | escape
    assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  endif
-%}

{{ 'component-facets.css' | asset_url | stylesheet_tag }}
{{ 'component-range-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-swatch.css' | asset_url | stylesheet_tag }}

<sidebar-drawer id="site-filters" class="site-nav style--sidebar" tabindex="-1" role="dialog" aria-modal="true" style="display:none" style="display:none">

  <button class="site-close-handle" title="{{ 'general.accessibility_labels.close_sidebar' | t }}">
    <span class="visually-hidden">{{ 'general.accessibility_labels.close_sidebar' | t }}</span>
    <span class="hamburger-menu" aria-hidden="true">{%- render 'theme-symbols', icon: 'close' -%}</span>
  </button>

  <div class="site-nav-container">
    <div class="site-nav-container-last">

      <p class="title sidebar-title">{{ 'sidebar.filtering_title' | t }}</p>
      <p class="subtitle" id="CollectionProductCount" role="status">
        {%- if results.results_count -%}
          {{ 'collections.results_with_count' | t: count: results.results_count }}
        {%- elsif results.products_count == results.all_products_count -%}
          {{ 'collections.product_count_simple' | t: count: results.products_count }}
        {%- else -%}
          {{ 'collections.product_count' | t: product_count: results.products_count, count: results.all_products_count }}
        {%- endif -%}
      </p>

      <div class="top">

        <facet-filters-form data-location="desktop">

          <form id="FacetFiltersForm" class="facets__form facets__form--mobile">

            {%- if results.terms -%}
              <input type="hidden" name="q" value="{{ results.terms | escape }}">
              <input name="options[prefix]" type="hidden" value="last">
            {%- elsif results.current_vendor or results.current_type -%}
              <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
            {%- endif -%}

            {%- if enable_filtering -%}

              <div class="facets__prewrapper">

                <div class="facets__wrapper" id="FacetsWrapper">

                  <div class="active-facets active-facets-mobile">
                    {%- assign has_active_filter = false -%}
                    {%- for filter in results.filters -%}
                      {%- for value in filter.active_values -%}
                        {%- assign has_active_filter = true -%}
                        <a class="active-facets__button active-facets__button--light button button--smallest button--outline js-facet-remove" href="{{ value.url_to_remove }}">
                          {%- if filter.type == 'boolean' -%}
                            {{ filter.label | escape }}:&nbsp;
                          {%- endif -%}
                          {{ value.label | escape }}
                          {%- render 'theme-symbols', icon: 'close' -%}
                        </a>
                      {%- endfor -%}
                      {%- if filter.type == "price_range" -%}
                        {%- if filter.min_value.value != nil or filter.max_value.value != nil -%}
                          {%- assign has_active_filter = true -%}
                          <a class="active-facets__button active-facets__button--light button button--smallest button--outline js-facet-remove" href="{{ filter.url_to_remove }}">
                            {%- if filter.min_value.value -%}{{ filter.min_value.value | money }}{%- else -%}{{ 0 | money }}{%- endif -%}-{%- if filter.max_value.value -%}{{ filter.max_value.value | money }}{%- else -%}{{ filter.range_max | money }}{%- endif -%}
                            {%- render 'theme-symbols', icon: 'close' -%}
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                    {%- endfor -%}
                    {%- if has_active_filter -%}
                      <facet-remove>
                        <a href="{{ results_url }}" class="active-facets__button button button--smallest button--solid js-facet-remove">{{ 'collections.clear_all' | t }}</a>
                      </facet-remove>
                    {%- endif -%}
                  </div>

                  {%- unless results.filters == empty -%}
                    <p class="facets__heading">{{ 'collections.filter_by_label' | t }}</p>
                  {%- endunless -%}

                  {%- for filter in results.filters -%}

                    {%- assign total_active_values = total_active_values | plus: filter.active_values.size -%}

                    {%- case filter.type -%}

                      {%- when 'boolean' or 'list' -%}

                        <details id="Filter-{{ filter.param_name | handleize }}" class="disclosure-has-popup facets__disclosure js-filter" data-index="{{ forloop.index }}" {% if filter.operator == 'AND' %} data-and-operator {% endif %}>
                          <summary class="facets__summary">
                            {{ filter.label | escape }} 
                          </summary>
                          {%- if filter.operator == 'AND' -%}
                            <span class="facets__and-helper-text--mobile text-size--smaller hide">{{ 'collections.match_all_label' | t }}</span>
                          {%- endif -%}
                          <div class="facets__display">
                            <div class="facets__header">
                              <span class="facets__selected no-js-hidden">{{ 'collections.filters_selected' | t: count: filter.active_values.size }}</span>
                              <facet-remove>
                                <a href="{{ filter.url_to_remove }}" class="facets__reset link underlined-link js-facet-remove" >{{ 'collections.reset' | t }}</a>
                              </facet-remove>
                            </div>

                            {%- render 'filter-blocks', filter: filter, location: location, image_filter_layout: image_filter_layout -%}

                          </div>
                        </details>

                      {%- when 'price_range' -%}

                        <details id="Filter-{{ filter.param_name | handleize }}" class="disclosure-has-popup facets__disclosure js-filter" data-index="{{ forloop.index }}">
                          <summary class="facets__summary">
                            {{ filter.label | escape }} 
                          </summary>
                          <div class="facets__display">
                            <div class="facets__header">
                              {%- assign max_price_amount = filter.range_max | money | escape -%}
                              <span class="facets__selected">{{ "collections.max_price_html" | t: price: max_price_amount }}</span>
                              <facet-remove>
                                <a href="{{ filter.url_to_remove }}" class="facets__reset link underlined-link js-facet-remove" >{{ 'collections.reset' | t }}</a>
                              </facet-remove>
                            </div>
                            
                            {%- render 'filter-price-range', filter: filter, location: 'desktop' -%}

                          </div>

                        </details>

                    {%- endcase -%}

                  {%- endfor -%}

                  <noscript>
                    <button type="submit" class="facets__button button">{{ 'collections.filter_button' | t }}</button>
                  </noscript>

                </div>

              </div>

            {%- endif -%}

            {%- if enable_sorting -%}

              <div class="collection-filters__item sorting">
                <div class="collection-filters__field">
                  <label class="facets__heading" for="SortBy">{{ 'collections.sort_by_label' | t }}</label>
                  <div class="select">
                    {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
                    <select name="sort_by" class="select__select collection-filters__sort" id="SortBy" aria-describedby="a11y-refresh-page-message">
                      {%- for option in results.sort_options -%}
                        <option value="{{ option.value | escape }}"{% if option.value == sort_by %} selected="selected"{% endif %}>{{ option.name | escape }}</option>
                      {%- endfor -%}
                    </select>
                  </div>
                </div>
                <noscript>
                  <button type="submit" class="button button--small">{{ 'collections.sort_button' | t }}</button>
                </noscript>
              </div>

            {%- endif -%}

          </form>

        </facet-filters-form>

      </div>

    </div>
  </div>


</sidebar-drawer>
<script>document.body.append(document.getElementById('site-filters'));</script>
<script src="{{ 'component-facets.js' | asset_url }}" defer></script>

<div class="site-filter-handle-holder">
  <site-filter-handle 
    id="site-filter-handle" 
    class="site-filter-handle site-menu-handle" 
    aria-expanded="false" aria-controls="site-filters">
    <span class="filter-menu" aria-hidden="true">
      {%- render 'theme-symbols', icon: 'filter' -%}
    </span>
    <span class="filter-text">
      {%- liquid
        if enable_filtering and enable_sorting
          echo 'collections.filter_and_sort' | t
        elsif enable_filtering
          echo 'collections.filter_button' | t
        elsif enable_sorting
          echo 'collections.sort_button' | t
        endif
      -%}
    </span>
  </site-filter-handle>
</div>