{%- capture date_format -%} {{ 'general.date_format.month_day_year' | t }} {%- endcapture -%}
{%- unless article == blank -%}
  <div
    class="blog-item"
    href="{{ article.url }}"
    title="{{ article.title }}"
    {% unless article.image %}
      data-has-no-image
    {% endunless %}
  >
    {%- if article.image -%}
      {%- liquid
        if section.index == 1 and index <= 2
          assign preload = true
        else
          assign preload = false
        endif
      -%}

      <div class="blog-item__image">
        {%- liquid
          render 'lazy-image', image: article.image, id: article.id, sizes: '(max-width: 1024px) and (orientation: portrait) max(50vw, 30vh), (max-width: 768px) max(50vw, 50vh), max(25vw, 50vh)', preload: preload
          if settings.show_preloader
            render 'preloader'
          endif
        -%}
      </div>
    {%- endif -%}
    <div class="blog-item__content">
      <h4 class=" yantramanav title {% if index == 1 %}h2{% else %}h3{% endif %}">{{ article.title }}</h4>
      {% comment %}
        <span class="blog-item__info text-size--smaller">
          <span class="blog-item__date">{{ article.published_at | date: date_format }}</span>
        </span>
      {% endcomment %}
      <span class="blog-item__summary yantramanav">
        {%- liquid
          if article.image
            assign excerpt_length = 30
          else
            assign excerpt_length = 30
          endif
          echo article.excerpt_or_content | strip_html | truncatewords: excerpt_length, '...' | escape
        -%}
      </span>
      <a
        href="{{ article.url }}"
        class="button button--solid button--smallest button--with-icon"
      >
        <span> Read Article</span>
        <span class="icon" aria-hidden="true">{%- render 'theme-symbols', icon: 'arrow-right' -%}</span>
      </a>
    </div>
  </div>
{%- else -%}
  <div class="blog-item img-right">
    <div class="blog-item__content">
      <span class="blog-item__title text-size--large">{{ 'general.onboarding.article_title' | t }}</span>
      <span class="blog-item__info text-size--smaller">12 May 2017</span>
    </div>

    <div class="blog-item__image">
      <span class="onboarding-svg">
        {{ 'collection-X' | replace: 'X', index | placeholder_svg_tag }}
      </span>
    </div>
  </div>
{%- endunless -%}
